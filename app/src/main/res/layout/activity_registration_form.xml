<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".RegistrationForm">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#85A1DF7F"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/logo2" />
            </LinearLayout>

            <View
                android:id="@+id/ViewRegistration"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#000000"
                android:paddingBottom="4dp" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/name"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:backgroundTint="#9C000000"
                android:ems="10"
                android:hint="@string/full_name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#9C000000"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#000000"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/times"
                android:text="Source:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/where_you_contacted_me_1st_time"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E471DD7C"
                android:onClick="showPopup"
                android:text="@string/select"
                android:textColor="#FFFFFF" />

            <View
                android:id="@+id/viewpayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:translationX="100dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/share_your_id_insta_fb_from_which_you_contacted"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText

                android:id="@+id/editTextTextPersonName2"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:backgroundTint="#9C000000"
                android:ems="10"
                android:hint="@string/your_answer"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#9C000000"
                android:textSize="14sp"
                tools:ignore="DuplicateSpeakableTextCheck,TextFields"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#000000"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/times"
                android:text="Payment Details:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/how_you_have_paid"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E471DD7C"
                android:onClick="showPopuppayment"
                android:text="@string/select" />

            <View
                android:id="@+id/viewpaymentmethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:accessibilityLiveRegion="assertive"
                android:fadeScrollbars="false"
                android:foregroundGravity="left"
                android:textSize="10sp"
                android:translationX="40dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/how_much_amount_you_have_paid"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#9C000000"
                android:ems="10"
                android:hint="@string/your_answer"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#9C000000"
                android:textSize="14sp"
                tools:ignore="TextFields" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="Payment Date?"
                android:textColor="#000000"
                android:textSize="16sp" />

            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#E471DD7C"
                android:calendarTextColor="@color/black"
                android:datePickerMode="calendar"
                android:headerBackground="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/package_you_have_chosen"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E471DD7C"
                android:onClick="showpopupplan"
                android:text="@string/select"
                android:textColor="#FFFFFF" />

            <View
                android:id="@+id/viewplan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:translationX="100dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="Upload Payment Slip"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btpaymentslip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E471DD7C"
                android:text="@string/select"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/impaymentslip"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"

                app:srcCompat="@drawable/blankimage" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#000000"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/times"
                android:text="Personal Details:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/mobile_no_you_will_be_using_for_whatsapp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/CCP"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_showNameCode="true"
                    app:ccp_textSize="16sp" />

                <EditText
                    android:id="@+id/CCPhone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:textColor="#000000"

                    android:textColorHint="#D3000000"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/gender"
                android:textColor="#000000"
                android:textSize="16sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/male"
                    android:textColor="#757575"
                    tools:ignore="TextContrastCheck" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/female"
                    android:textColor="#757575"
                    tools:ignore="TextContrastCheck" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/your_city"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#9C000000"
                android:ems="10"
                android:hint="@string/your_answer"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#9C000000"
                android:textSize="14sp"
                tools:ignore="TextFields" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/your_profession"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#9C000000"
                android:ems="10"
                android:hint="@string/your_answer"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#9C000000"
                android:textSize="14sp"
                tools:ignore="TextFields" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#000000"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/times"
                android:text="Daily Routine:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/when_you_get_up_in_the_morning_hh_mm"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TimePicker
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:background="#E471DD7C"
                android:calendarTextColor="#FFFFFF"
                android:headerBackground="#000000"
                android:scrollbarSize="30dp"
                android:timePickerMode="spinner"
                android:touchscreenBlocksFocus="true"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/when_you_sleep_at_night_hh_mm"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TimePicker
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:background="#E471DD7C"
                android:scrollbarSize="30dp"
                android:calendarTextColor="#FFFFFF"
                android:headerBackground="#000000"
                android:timePickerMode="spinner"
                android:touchscreenBlocksFocus="true"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/physical_activity_routine_in_mins_walk_running"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText

                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#9C000000"
                    android:ems="10"
                    android:hint="@string/your_answer"
                    android:inputType="number"
                    android:maxLength="3"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="#9C000000"
                    android:textSize="14sp"
                    tools:ignore="TextFields" />

                <Spinner
                    android:id="@+id/spinnerphysical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#000000"
                    android:entries="@array/hoursmints" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#000000"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/times"
                android:text="Medical History:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/medical_diagnose"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#9C000000"
                android:ems="10"
                android:hint="@string/your_answer"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#9C000000"
                android:textSize="14sp"
                tools:ignore="TextFields" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/current_medication"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#9C000000"
                android:ems="10"
                android:hint="Your answer"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#9C000000"
                android:textSize="14sp"
                tools:ignore="HardcodedText,TextFields" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/food_allergies"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#9C000000"
                android:ems="10"
                android:hint="@string/your_answer"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#9C000000"
                android:textSize="14sp"
                tools:ignore="TextFields" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/food_choices_liking_disliking"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#9C000000"
                android:ems="10"
                android:hint="@string/your_answer"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#9C000000"
                android:textSize="14sp"
                tools:ignore="TextFields" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#000000"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/times"
                android:text="Body Measurments:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/your_height_in_inches"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinnerheight"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#000000"
                    android:entries="@array/numbersft"
                    android:scrollbarSize="100dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/times"
                    android:text="Feet"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/spinnerheight2"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#000000"
                    android:entries="@array/numbersInches"
                    android:outlineProvider="paddedBounds"
                    android:scrollbarSize="4dp"
                    android:spinnerMode="dropdown"
                    android:verticalScrollbarPosition="right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/times"
                    android:text="Inches"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/your_current_weight"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText

                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#9C000000"
                    android:ems="10"
                    android:hint="@string/your_answer"
                    android:inputType="number"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="#9C000000"
                    android:textSize="14sp"
                    tools:ignore="TextFields" />

                <Spinner
                    android:id="@+id/spinnerweight"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#000000"
                    android:entries="@array/kgpound" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/your_personal_aim_related_to_your_weight"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText

                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#9C000000"
                    android:ems="10"
                    android:hint="@string/your_answer"
                    android:inputType="number"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="#9C000000"
                    android:textSize="14sp"
                    tools:ignore="TextFields" />

                <Spinner
                    android:id="@+id/spinnerweight2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#000000"
                    android:entries="@array/kgpound" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/right_thigh_in_centimeter"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <NumberPicker
                    android:id="@+id/nprt"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:theme="@style/NumberPickerTheme" />

                <Spinner
                    android:id="@+id/sprt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:backgroundTint="#000000"
                    android:entries="@array/InchesCentimeter" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/times"
                android:text="@string/left_thigh_in_centimeter"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <NumberPicker
                    android:id="@+id/nplt"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
